!!! 5
html(lang='en')  
  include includes/header
  body 

    include includes/topbar                                             
    
    div.container

            
      div.span12   
          
        include includes/intro
      
      each article in articles
        div(id=article._id)
          div.span12
            h2= article.title
            div.mb20
              a.btn.btn-primary.mr10(href="Javascript:readArticle('"+article._id+"')") Read
              a.btn.btn-danger.mr10(href="Javascript:removeArticle('"+article._id+"')") Delete
              span.label.label-inverse.mr10= article.feedName
              each tag in article.tags  
                span.label.mr10= tag  
            
          div.span12.showable.pb20(id="body"+article._id)
            div!= article.description
            a.btn.btn-success.mr10(href=article.link,target='_blank') Go
            a.btn(href="Javascript:hideArticle('"+article._id+"')") Hide
            
        div.span12.line

    include includes/footer
